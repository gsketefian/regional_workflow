      <dependency>
        <and>
          <datadep age="05:00"><cyclestr>&CYCLE_BASEDIR;/@Y@m@d@H/dynf0#fhr#.nc</cyclestr></datadep>
          <datadep age="05:00"><cyclestr>&CYCLE_BASEDIR;/@Y@m@d@H/phyf0#fhr#.nc</cyclestr></datadep>
        </and>
      </dependency>

