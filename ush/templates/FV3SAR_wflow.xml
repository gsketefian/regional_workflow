  <metatask name="&RUN_POST_TN;">
    
    <var name="fhr">&FHRS_RUN_POST;</var>
    
    <task name="&RUN_POST_TN;_#fhr#" maxtries="2">
    
      &RSRC_RUN_POST;
      &RSRV_DEFAULT;

